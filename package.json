{
  "name": "nighthawk",
  "version": "0.0.1",
  "author": "Tarak Sharma <tarak.scope@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantummkv/nighthawk"
  },
  "bugs": {
    "url": "https://github.com/quantummkv/nighthawk/issues"
  },
  "description": "A Stealthy, Simple Music Player that stays out of your way",
  "main": "./out/main.js",
  "scripts": {
    "start": "electron ./out/main.js",
    "devstart": "cross-env ELECTRON_DEV=dev electron ./out/main.js",
    "dev": "webpack --config ./webpack.config.dev.js",
	"build": "webpack --config ./webpack.config.prod.js",
	"dist": "build -mwl -c.mac.identity=null",
	"dist:windows": "build -w",
	"dist:linux": "build -l",
	"dist:darwin": "build -m -c.mac.identity=null",
    "server": "yarn run dev && webpack-dev-server --config ./webpack.config.server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "music",
    "player",
	"electron",
	"tray",
	"desktop",
	""
  ],
  "build": {
	"appId": "com.quantummkv.nighthawk",
	"productName": "Nighthawk",
	"compression": "maximum",
    "files": [
		"out/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
	},
	"nsis": {
	  "oneClick": false,
	  "allowToChangeInstallationDirectory": true,
	  "deleteAppDataOnUninstall": true,
	  "artifactName": "${name}-${version}-setup.${ext}"
	},
    "linux": {
      "category": "AudioVideo",
      "target": [
        "deb"
	  ],
      "executableName": "nighthawk"
    },
    "win": {
	  "target": [
		{
		  "target": "nsis",
		  "arch": [
			"x64",
			"ia32"
		  ]
		}
	  ]
    }
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/fs-extra": "^5.0.0",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-virtualized": "^9.7.9",
    "@types/webpack-env": "^1.13.3",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "electron": "^1.7.9",
    "electron-builder": "^19.49.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "react-hot-loader": "^3.1.3",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.19.1",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "dexie": "^2.0.1",
    "electron-positioner": "^3.0.0",
    "fs-extra": "^5.0.0",
    "immutable": "^4.0.0-rc.9",
    "mdi": "^2.1.19",
    "music-metadata": "^0.8.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-virtualized": "^9.14.1"
  }
}
